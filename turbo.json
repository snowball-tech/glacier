{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false
    },
    "types:check": {
      "outputs": []
    },

    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },

    "format": {},
    "format:fix": {},
    "//#format": {
      "dependsOn": ["//#format:root"]
    },
    "//#format:fix": {
      "dependsOn": ["//#format:root:fix"]
    },
    "//#format:root": {},
    "//#format:root:fix": {},

    "lint": {
      "dependsOn": ["@snowball-tech/utils#build"]
    },
    "lint:fix": {
      "dependsOn": ["@snowball-tech/utils#build"]
    },
    "//#lint": {
      "dependsOn": ["//#lint:root"]
    },
    "//#lint:fix": {
      "dependsOn": ["//#lint:root:fix"]
    },
    "//#lint:root": {
      "dependsOn": ["@snowball-tech/utils#build"]
    },
    "//#lint:root:fix": {
      "dependsOn": ["@snowball-tech/utils#build"]
    }
  },
  "globalDependencies": [
    ".env",
    ".eslintignore",
    ".eslintrc.js",
    ".pnp.cjs",
    ".pnp.loader.mjs",
    ".prettierignore",
    ".prettierrc.js",
    ".yarnrc.yml",
    "package.json",
    "tsconfig.json"
  ]
}
