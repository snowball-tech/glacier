{
  "name": "@snowball-tech/design-tokens",
  "version": "1.3.2",
  "description": "Single source of truth repository for Fractal (Snowball's Design System) design tokens",
  "author": "Snowball Engineering Team <engineering@snowball.xyz> (https://github.com/orgs/snowball-tech)",
  "contributors": [
    "Clément PRÉVOT <clement@snowball.xyz> (https://github.com/clementprevot)"
  ],
  "license": "MIT",
  "keywords": [
    "snowball",
    "design-system",
    "design-tokens",
    "style-dictionary",
    "figma",
    "styleguide"
  ],
  "homepage": "https://github.com/snowball-tech/glacier/tree/main/packages/design-tokens",
  "repository": {
    "type": "git",
    "url": "https://github.com/snowball-tech/glacier.git",
    "directory": "packages/design-tokens"
  },
  "bugs": "https://github.com/snowball-tech/glacier/issues",
  "packageManager": "yarn@3.6.0",
  "engines": {
    "yarn": "^3.0.0",
    "node": "^18.0.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "prebuild": "yarn run clean && yarn run update:fonts",
    "prebuild:fast": "yarn run clean",
    "build": "yarn run prebuild && node ./src/build.js",
    "build:fast": "yarn run prebuild:fast && node ./src/build.js",
    "clean": "rm -Rf dist",
    "dev": "nodemon -x \"yarn build\"",
    "format": "yarn run -T prettier --ignore-path ../../.prettierignore --cache --check .",
    "format:fix": "yarn run -T prettier --ignore-path ../../.prettierignore --cache --write .",
    "lint": "yarn run -T eslint --cache .",
    "lint:fix": "yarn run -T eslint --cache --fix .",
    "setup": "yarn && yarn run update:fonts",
    "update:fonts": "./scripts/update-fonts.sh ./assets"
  },
  "devDependencies": {
    "@types/deasync": "^0.1.2",
    "@types/lodash": "^4.14.195",
    "deasync": "^0.1.28",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.22",
    "ora": "5.4.1",
    "style-dictionary": "^3.8.0",
    "ttf2woff": "^3.0.0",
    "ttf2woff2": "^5.0.0"
  }
}
